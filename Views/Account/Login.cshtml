@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo" style="max-width: 420px; width: 100%; margin: 0 auto; padding: 2.5rem; background: #0f0f0f; border-radius: 12px; box-shadow: 0 8px 32px rgba(0,0,0,0.3); border: 1px solid #2a2a2a;">
    <div class="agileits-top">
        <div style="text-align: center; margin-bottom: 2rem;">
            <svg style="width: 48px; height: 48px; margin-bottom: 1rem;" fill="#0d6efd" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2a10 10 0 100 20 10 10 0 000-20zm0 18a8 8 0 110-16 8 8 0 010 16zm-1-13a1 1 0 012 0v6a1 1 0 01-2 0V7zm0 10a1 1 0 012 0v1a1 1 0 01-2 0v-1z" />
            </svg>
            <h2 style="color: #f5f5f5; margin-bottom: 0.5rem; font-size: 1.75rem; font-weight: 700;">Welcome Back</h2>
            <p style="color: #a1a1aa; font-size: 0.9rem;">Sign in to access your account</p>
        </div>

        <form asp-action="Login" method="post" style="display: flex; flex-direction: column; gap: 1.25rem;">
            
            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                <input asp-for="Email" placeholder="Email Address" required="" style="padding: 0.9rem 1rem; background: #1a1a1a; border: 1px solid #2d2d2d; border-radius: 8px; color: #f5f5f5; font-size: 0.95rem; transition: all 0.3s ease;">
                <span asp-validation-for="Email" style="color: #ef4444; font-size: 0.8rem; margin-top: -0.25rem;"></span>
            </div>

            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                <input asp-for="Password" placeholder="Password" required="" style="padding: 0.9rem 1rem; background: #1a1a1a; border: 1px solid #2d2d2d; border-radius: 8px; color: #f5f5f5; font-size: 0.95rem; transition: all 0.3s ease;">
                <span asp-validation-for="Password" style="color: #ef4444; font-size: 0.8rem; margin-top: -0.25rem;"></span>
            </div>

            <div class="wthree-text" style="display: flex; justify-content: space-between; align-items: center; margin: 0.5rem 0 1rem;">
                <label class="anim" style="display: flex; align-items: center; gap: 0.5rem; color: #d4d4d8; cursor: pointer; font-size: 0.9rem;">
                    <input asp-for="RememberMe" class="checkbox" style="width: 1.1rem; height: 1.1rem; accent-color: #0d6efd; border-radius: 4px;">
                    <span>Remember me</span>
                </label>
              
                <div class="clear"></div>
            </div>

            <button type="submit" style="background: linear-gradient(135deg, #0d6efd 0%, #0d6efd 100%); color: white; border: none; padding: 1rem; border-radius: 8px; font-weight: 600; font-size: 1rem; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 4px 6px rgba(124, 58, 237, 0.2);">
                Sign In
            </button>

           

           
        </form>

        <p style="text-align: center; margin-top: 2rem; color: #a1a1aa; font-size: 0.9rem;">
            Don't have an account? <a asp-action="Register" style="color: #0d6efd; text-decoration: none; font-weight: 500;">Sign up</a>
        </p>
    </div>
</div>