@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo" style="max-width: 420px; width: 100%; margin: 0 auto; padding: 2.5rem; background: #0f0f0f; border-radius: 12px; box-shadow: 0 8px 32px rgba(0,0,0,0.3); border: 1px solid #2a2a2a;">
    >
    <div class="agileits-top">
        <form asp-action="Register" method="post" asp-controller="Account">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="FirstName" placeholder="FirstName" required="">
            <span asp-validation-for="FirstName"></span>
            <br />
            <input asp-for="LastName" placeholder="Last Name" required="">
            <span asp-validation-for="LastName"></span>
            <br />
            <input asp-for="UserName" placeholder="UserName" required="">
            <span asp-validation-for="UserName"></span>
            <br />
            <input asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email"></span>
            <br />
            <input asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password"></span>
            <br />
            <input asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
            <span asp-validation-for="ConfirmPassword"></span>
            <br />

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox" required="" style="background:#0d6efd">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP" style="background:#0d6efd; border-radius: 4px;">
        </form>
        <p>Don you have an Account? <a asp-action="Login"> Login Now!</a></p>
    </div>
</div>

<style>
    body {
        background: #fff;
        background-size: cover;
        background-attachment: fixed;
        font-family: 'Roboto', sans-serif;
    }
</style>